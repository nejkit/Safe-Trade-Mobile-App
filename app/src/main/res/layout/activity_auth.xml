<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AuthActivity">

    <TextView
        android:id="@+id/auth_main_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:fontFamily="sans-serif"
        android:text="@string/auth_frame_title_text"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/auth_login_edit_text"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="45dp"
        android:textSize="16dp"
        android:inputType="text"
        android:hint="Введите login" />
    <EditText
        android:id="@+id/auth_password_edit_text"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="Введите пароль" />

    <Button
        android:id="@+id/auth_submit_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Войти" />

    <TextView
        android:id="@+id/restore_access_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:text="Восстановление доступа к учетной записи" />

    <TextView
        android:id="@+id/create_registration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:text="Создать новую учетную запись" />

</LinearLayout>